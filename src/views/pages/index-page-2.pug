				a(href="#index5").main__pagination__item
					!="05"
				a(href="#index6").main__pagination__item
					!="06"
				a(href="#index7").main__pagination__item
					!="07"
				a(href="#index8").main__pagination__item
					!="08"

	.section.section__black.section__border-b.sonic-sensor__section(id="index2")
		.container
			include ../../blocks/components/sonic-sensor/sonic-sensor

	.section.section__black.section__border-b.dynamic-sensor__section(id="index3")
		.container
			include ../../blocks/components/dynamic-sensor/dynamic-sensor
	.section.section__black.section__border-b.electronic-unit__section(id="index4")
		.container
			include ../../blocks/components/electronic-unit/electronic-unit
